<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/btn_rtmp_push"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="150dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="click rtmp push"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/btn_srt_push"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_rtmp_push"
        android:background="@color/cardview_shadow_start_color"
        android:gravity="center"
        android:text="click srt push"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/btn_play"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_srt_push"
        android:layout_marginTop="150dp"
        android:background="@color/teal_200"
        android:gravity="center"
        android:text="click 2 play"
        android:textColor="@color/white" />
</RelativeLayout>